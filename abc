#vlan format

vlan_id = 10
vlan_cmd = "vlan {}"

a= vlan_cmd.format(vlan_id)

print (a)

##############################################################

## check switch hotname is small or upper letter

device_name = "Inharsw500"

if (device_name == "INHARSW500"):
    print("Device Found")
else:
    print("Device Not Found")
    
 ##############################################################
 ## check switch hotname with upperfunction

device_name = "Inharsw500"
device_name.upper()

if (device_name.upper() == "INHARSW500"):
    print("Device Found")
else:
    print("Device Not Found")
       
## check switch hotname is small or upper letter

device_name = "Inharsw500"
device_name.upper()

if (device_name.upper() == "INHARSW500"):
    print("Device Found")
else:
    print("Device Not Found")
    
